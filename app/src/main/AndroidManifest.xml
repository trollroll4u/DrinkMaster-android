<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" package="com.example.DrinkMaster">


    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"

        android:supportsRtl="true"
        android:label="@string/app_name"
        android:name=".DrinkMasterApplication"
        android:theme="@style/Theme.DrinkMaster"
        tools:targetApi="31">
        <activity
            android:name="com.example.DrinkMaster.modules.signup.SignupActivity"
            android:exported="false" />
        <activity
            android:name="com.example.DrinkMaster.modules.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.example.DrinkMaster.MainActivity"
            android:exported="false">

        </activity>
        <activity android:name="com.example.DrinkMaster.modules.login.ForgotPasswordActivity"
            android:exported="false">

        </activity>
    </application>

</manifest>